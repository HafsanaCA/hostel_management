<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="hostel_room_snippet_template" name="Rooms">
        <section class="categories_section">
            <div class="container">
                <div class="alert alert-info">
                    <h4>Your Category Highlight Tab snippet will be displayed here...
                        Please save to view the snippet
                    </h4>
                </div>
            </div>
        </section>
    </template>
    <template id="room_snippet" inherit_id="website.snippets" name="Rooms Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="hostel_management.hostel_room_snippet_template" />
        </xpath>
    </template>
</odoo>
