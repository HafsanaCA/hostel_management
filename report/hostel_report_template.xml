<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="student_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Students Report</h2>
                    <t t-if="data.get('student_id') and data.get('room_id') and docs">
                        <p>Student:
                            <t t-esc="docs[0]['name']"/>
                        </p>
                        <p>Room:
                            <t t-esc="docs[0]['room_name']"/>
                        </p>
                    </t>
                    <t t-elif="data.get('room_id') and docs">
                        <p>Room:
                            <t t-esc="docs[0]['room_name']"/>
                        </p>
                    </t>
                    <t t-elif="data.get('student_id') and docs">
                        <p>Student:
                            <t t-esc="docs[0]['name']"/>
                        </p>
                    </t>
                    <table class="table table-border" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>Sl.No</th>
                                <th>Name</th>
                                <th>Pending Amount</th>
                                <th>Room</th>
                                <th>Invoice Status</th>
                            </tr>
                        </thead>
                        <tbody style="padding: 5px;">
                            <t t-set="sl" t-value="1" />
                            <t t-foreach="docs" t-as="student">
                                <tr>
                                    <td style="padding: 5px;">
                                        <t t-esc="sl"/>
                                    </td>
                                    <td>
                                        <t t-esc="student['name']"/>
                                    </td>
                                    <td>
                                        <t t-esc="student['pending_amount']"/>
                                    </td>
                                    <td>
                                        <t t-esc="student['room_name']"/>
                                    </td>
                                    <td>
                                        <t t-esc="student['invoice_status']"/>
                                    </td>
                                </tr>
                                <t t-set="sl" t-value="sl+1"/>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>