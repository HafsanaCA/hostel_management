<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_student_leave_report_form" model="ir.ui.view">
        <field name="name">leave.request.report.form</field>
        <field name="model">leave.request.report</field>
        <field name="arch" type="xml">
            <form string="Student's Leave Request Report">
                <group>
                    <field name="room_id" />
                    <field name="student_id" />
                    <field name="arrival_date" />
                    <field name="leave_date" />
                </group>
                <footer>
                    <button name="action_print_leave_report" string="Print PDF" type="object" class="btn-primary"/>
                    <button name="action_print_leave_xlsx" string="Print XLSX" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
